<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Головне вікно" Height="450" Width="800">
    <DockPanel>
        
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл" FontSize="20">
                <MenuItem Header="Вихід" Name="mFileExit" Click="mFileExit_Click">
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Дії" FontSize="20">
                <MenuItem Header="Реєстрація" Name="mActionREgister" Click="mActionREgister_Click" />
                <MenuItem Header="Логін" Name="mActionLogin" Click="mActionLogin_Click" />

            </MenuItem>
            <MenuItem Header ="Допомога" FontSize="20"/>
        </Menu>
        

    <Grid>
        <Button Name="btnConnetion" Content="Підключитися до БД" Height="30" Width="200" Click="btnConnetion_Click"/>
    </Grid>
    </DockPanel>

</Window>
